# Default make file
PKG_CPPFLAGS=-I.
PKG_LIBS=$(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)

# Retrieve all cpp files in src/, src/A and src/B directories
SOURCES=$(wildcard ./*.cpp A/*.cpp B/*.cpp)

# Obtain the object files
OBJECTS=$(SOURCES:.cpp=.o)

all: $(SHLIB)

# Provide recipe to remove all objects
clean:
	@rm -f $(OBJECTS)
